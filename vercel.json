{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/favicon.ico",
      "destination": "/vite.svg"
    },
    {
      "source": "/favicon.png",
      "destination": "/vite.svg"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
